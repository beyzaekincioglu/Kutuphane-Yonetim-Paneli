@using Devrekani_Sehitler_Kutuphanesi.Models.Entity
@model List<TBL_PERSONEL>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2> Üyeler </h2>
<table class="table table-bordered">
    <tr>
        <th>PERSONEL ID</th>
        <th>PERSONEL ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var prs in Model)
    {
        <tr>
            <td>@prs.ID</td>
            <td>@prs.PERSONEL</td>
            <td>@Html.ActionLink("Sil", "PersonelSil", new { id = prs.ID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz ?')" }) </td>
            @*<td><a href="/Category/KategoriSil/@ktg.ID" class="btn btn-danger">Sil</a></td>  ESKİ USÜL hrefle yapma  *@
            <td><a href="/Staff/PersonelGetir/@prs.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Staff/PersonelEkle" class="btn btn-primary">Yeni Personel Ekle</a>