@model MvcKutuphane.Models.Entity.Authors
    

@{
    ViewBag.Title = "AuthorGet";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("AuthorUpdate","Author",FormMethod.Post))
            {
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Yazar Id</label>
            @Html.TextBoxFor(author => author.Id, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazar Adı</label>
            @Html.TextBoxFor(author => author.Name, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazar Soyadı</label>
            @Html.TextBoxFor(author => author.Surname, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazar Detay Bilgileri</label>
            @Html.TextAreaFor(author => author.Detail, new { @class = "form-control" })
        </div>
    <button class="btn btn-warning">Yazar Bilgilerini Güncelle</button>
    </div>

          
            }
